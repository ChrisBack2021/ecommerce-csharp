@model Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="row justify-content-center m-auto">
    <div class="col-md-5">
        <div class="text-center mb-4">
            <h4>Delete confirmation for @Model.FullName</h4>
        </div>
        <div class="row">
            <div>
                    <div class="mb-1 text-center">
                    <img src="~/Images/@Model.ProfilePicture" class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview" />

                    </div>
                
                    <div class="mb-1">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-1">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" readonly/>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="mb-1">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-end"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All </a>
                    </div>
            </div>
        </div>
    </div>
</div>

