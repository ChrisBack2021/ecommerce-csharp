@model Producer

@{
    ViewData["Title"] = "Delete Producer";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="text-center">
            <h4>Delete confirmation for @Model.FullName</h4>
        </div>
        <div class="row">
            <div>
                <div class="mb-1 text-center">
                    <img src="~/Images/@Model.ProfilePicture" class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview" />

                </div>
                <div class="mb-1">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Biography" class="control-label"></label>
                    <textarea asp-for="Biography" class="form-control" height="80" readonly></textarea>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>

                <div class="mb-1">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All </a>
                </div>
            </div>
        </div>
    </div>
</div>
