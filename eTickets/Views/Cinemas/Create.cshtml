@using eTickets.Data.ViewModels;
@model CinemaVM

@{
    ViewData["Title"] = "Add a new Cinema";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="text-center mb-4">
            <h4>Add a New Cinema</h4>
        </div>
        <div class="row">
            <div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="mb-1 text-center">
                        <img class="border-info rounded-circle" style="max-width:150px" id="LogoPreview" />

                    </div>
                    <div class="mb-1">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" type="file" onchange="previewImage()" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="mb-1">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-1">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-1">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        var preview = document.querySelector('img');
        var fileInput = document.querySelector('input[type=file]');

        window.addEventListener("load", function (event) {
            fileInput.addEventListener('change', function () {
                var file = fileInput.files[0];
                var reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                };

                if (file) {
                    reader.readAsDataURL(file);
                } else {
                    // Clear the preview if no file is selected
                    preview.src = '';
                }
            });
        })

        function previewImage() {
            fileInput.addEventListener('change', function () {
                var file = fileInput.files[0];
                var reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                };

                if (file) {
                    reader.readAsDataURL(file);
                } else {
                    // Clear the preview if no file is selected
                    preview.src = '';
                }
            });
        }
    </script>
}
